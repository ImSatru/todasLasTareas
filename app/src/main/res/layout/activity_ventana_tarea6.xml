<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/numeroA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número A"
        android:inputType="number"/>

    <EditText
        android:id="@+id/numeroB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número B"
        android:inputType="number"/>

    <EditText
        android:id="@+id/numeroC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número C"
        android:inputType="number"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resultado"/>

    <EditText
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seleccionar_n_meros"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/checkboxA"/>

        <CheckBox
            android:id="@+id/checkB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/checkboxB"/>

        <CheckBox
            android:id="@+id/checkC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/checkboxC"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/operaciones"/>

    <RadioGroup
        android:id="@+id/grupoOperaciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rbSuma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/suma"/>

        <RadioButton
            android:id="@+id/rbResta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resta"/>

        <RadioButton
            android:id="@+id/rbMultiplicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/multiplicaci_n"/>

        <RadioButton
            android:id="@+id/rbDivision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/divisi_n"/>

        <RadioButton
            android:id="@+id/rbRaiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Raíz de (B + C)"/>

        <RadioButton
            android:id="@+id/rbMayor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Número mayor"/>

        <RadioButton
            android:id="@+id/rbMenor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Número menor"/>
    </RadioGroup>

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular"/>

</LinearLayout>
